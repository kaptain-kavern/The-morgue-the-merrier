    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <recipeUsers><li>TableMorgueSlab</li></recipeUsers>
    <workAmount>800</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>BodyBagFilled</li>
          </thingDefs>
        </filter>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>BodyBagFilled</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <PoorlyHarvestedNaturalLeg>2</PoorlyHarvestedNaturalLeg>
      <PoorlyHarvestedNaturalArm>2</PoorlyHarvestedNaturalArm>
    </products>
    <skillRequirements>
      <li>
        <skill>Medicine</skill>
        <minLevel>8</minLevel>
      </li>
    </skillRequirements>
    <workSkill>Medicine</workSkill>
  </RecipeDef>

</RecipeDefs>
